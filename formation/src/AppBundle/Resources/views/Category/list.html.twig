{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item active">Accueil</li>
	</ol>
{% endblock %}
{% block body %}
	<div class="container">
			<div class="row">
				<div class="col">
					<ul class="nav nav-pills">
						<li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-home"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="jumbotron">
						<h1>Welcome !</h1>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="page-header">
						<h1>Categories <a href="{{ path('formCategory') }}" class="btn btn-success btn-circle">+</a></h1>
						
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<p>
					{% for category in categories %}
						<a href="{{ path('viewCategory', {slug : category.slug} ) }}" class="btn btn-primary">{{ category.name }} <span class="badge badge-light">{{ category.books | length }}</span></a>
					{% endfor %}
					</p>
				</div>
			</div>
			<a class="btn btn-info" href="{{ path('listBook') }}">Voir tous les livres</a>
		</div>

{% endblock %}
